{{!
    @template mod_forum/discussion_view_posts

    Template to display a forum discussion.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * TODO

    Example context (json):
    {
    }
}}
<article id="p{{id}}" tabindex="-1" class="relativelink">
    <div class="forumpost clearfix read firstpost starter" role="region" aria-label="{{!TODO discussiobyuser}}">
        <header class="row header clearfix">
            <div class="left picture" role="presentation">
                <a href="{{author.profileurl}}" alt="{{!TODO Picture of user}}" title="{{!TODO Picture of user}}">
                    <img class="h-auto rounded-circle" src="{{author.profileimageurl}}">
                </a>
            </div>
            <div class="topic firstpost starter">
                <div class="subject" role="heading" aria-level="1" id="headp{{id}}">{{subject}}</div>
                <address class="author">{{{bynameondate}}}</address>
            </div>
        </header>
        <div class="row maincontent clearfix">
            <div class="left">
                <div class="grouppictures">
                    {{! TODO }}
                    &nbsp;
                </div>
            </div>
            <div class="no-overflow">
                <div class="content">
                    <div class="posting fullpost">
                        {{{message}}}
                    </div>
                </div>
            </div>
        </div>
        <div class="row side">
            <div class="left">&nbsp;</div>
            <div class="options clearfix">
                <div class="commands nav">
                    {{#commands}}
                        {{#url}}
                            <a class="nav-item nav-link" href="{{{url}}}"{{!
                                    }}{{#attributes}}{{key}}={{#quote}}{{value}}{{/quote}}{{/attributes}}{{!
                                }}>{{{text}}}</a>
                        {{/url}}
                        {{#html}}
                            {{{html}}}
                        {{/html}}
                    {{/commands}}
                </div>
            </div>
        </div>
    </div>
    {{! TODO Handle the differnet display modes here}}
    {{#haschildren}}
    {{#children}}
    <div class="indent">
        {{> mod_forum/discussion_view_posts}}
    </div>
    {{/children}}
    {{/haschildren}}
</article>
