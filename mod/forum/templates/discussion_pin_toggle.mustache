{{!
    @template mod_forum/discussion_pin_toggle

    Template to display the discussion pin toggle.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * TODO

    Example context (json):
    {
    }
}}
{{#can_pin}}
<div class="discussioncontrol pindiscussion">
    <a href="" {{!
        }} class="btn btn-info" {{!
        }} data-action="toggle" {{!
        }} data-discussionid="{{discussionid}}" {{!
        }} data-forumid="{{forumid}}"  {{!
        }}{{#is_pinned}}{{!
            }} data-targetstate="0" {{!
        }}{{/is_pinned}}{{!
        }}{{^is_pinned}}{{!
            }} data-targetstate="1" {{!
        }}{{/is_pinned}}{{!
        }}>
        {{#is_pinned}}{{#str}}discussionunpin, mod_forum{{/str}}{{/is_pinned}}
        {{^is_pinned}}{{#str}}discussionpin, mod_forum{{/str}}{{/is_pinned}}
    </a>
</div>
{{/can_pin}}
